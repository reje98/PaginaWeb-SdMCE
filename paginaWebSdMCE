<script>
    // Obtenemos todos los enlaces de la barra de navegación
    const navLinks = document.querySelectorAll('.nav-links li a');
  
    // Agregamos un evento click a cada enlace de la barra de navegación
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        // Ocultamos todas las secciones
        document.querySelectorAll('.content section').forEach(section => {
          section.style.display = 'none';
        });
  
        // Obtenemos el ID de la sección correspondiente al enlace
        const targetId = link.getAttribute('href').slice(1);
  
        // Mostramos la sección correspondiente
        document.getElementById(targetId).style.display = 'block';
      });
    });
  </script>
  
